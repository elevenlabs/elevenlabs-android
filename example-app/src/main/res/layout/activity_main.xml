<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    android:background="@color/background"
    android:clickable="false"
    android:focusable="false"
    tools:context=".MainActivity">

    <!-- Logo -->
    <ImageView
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:src="@drawable/elevenlabs_logo"
        android:contentDescription="ElevenLabs Logo"
        android:adjustViewBounds="true"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:clickable="false"
        android:focusable="false" />

    <!-- App Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Android Example App"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/on_background"
        android:layout_marginBottom="24dp"
        android:textAlignment="center"
        android:clickable="false"
        android:focusable="false" />

    <!-- Status Display -->
    <TextView
        android:id="@+id/statusText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Status: Disconnected"
        android:textSize="15sp"
        android:textColor="@color/on_surface"
        android:background="@color/elevated_surface"
        android:padding="16dp"
        android:layout_marginHorizontal="0dp"
        android:layout_marginBottom="12dp"
        android:textAlignment="center"
        android:foregroundGravity="center"
        android:elevation="0dp"
        android:backgroundTintMode="src_over"
        android:outlineAmbientShadowColor="@color/outline"
        android:clickable="false"
        android:focusable="false" />



    <!-- Connect Button -->
    <Button
        android:id="@+id/connectButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Connect"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:backgroundTint="@color/primary_button_tint"
        android:textColor="@color/primary_button_text"
        android:layout_marginBottom="10dp"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:clickable="true"
        android:focusable="true" />

    <!-- Feedback Buttons -->
    <LinearLayout
        android:id="@+id/feedbackContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:visibility="gone"
        android:clickable="false"
        android:focusable="false">

        <Button
            android:id="@+id/thumbsUpButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="👍"
            android:textSize="18sp"
            android:background="@drawable/feedback_button_positive"
            android:textColor="@color/primary_button_text"
            android:layout_marginEnd="12dp"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:enabled="false"
            android:clickable="true"
            android:focusable="true" />

        <Button
            android:id="@+id/thumbsDownButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="👎"
            android:textSize="18sp"
            android:background="@drawable/feedback_button_negative"
            android:textColor="@color/primary_button_text"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:enabled="false"
            android:clickable="true"
            android:focusable="true" />

    </LinearLayout>

    <!-- Mode indicator: dot + label below the button -->
    <LinearLayout
        android:id="@+id/modeContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="12dp"
        android:visibility="gone"
        android:clickable="false"
        android:focusable="false">

        <View
            android:id="@+id/modeDot"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@color/status_disconnected"
            android:layout_marginEnd="8dp"
            android:clickable="false"
            android:focusable="false"/>

        <TextView
            android:id="@+id/modeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Listening"
            android:textSize="14sp"
            android:textColor="@color/on_background"
            android:clickable="false"
            android:focusable="false"/>
    </LinearLayout>

</LinearLayout>